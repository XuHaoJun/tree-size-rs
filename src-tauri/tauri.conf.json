{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tree-size-rs",
  "version": "0.1.0",
  "identifier": "com.tree-size-rs.app",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:3456",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "tree-size-rs",
        "width": 1280,
        "height": 850
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
